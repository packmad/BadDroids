<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unige.dibris.baddroids.ScanResultActivity"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/textViewPackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Package name:"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="37dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textViewScanTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan time:"
        android:textStyle="bold"
        android:layout_marginStart="46dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textViewScanTimeResult"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewScanTimeResult" />

    <TextView
        android:id="@+id/textViewPackNameResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pack_name"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textViewProbabilityResult"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="37dp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewProbabilityResult" />

    <TextView
        android:id="@+id/textViewDetected"
        android:layout_width="127dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="detected"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/imgDroidResult"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewScanTimeResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scan_time"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="109dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="219dp" />

    <Button
        android:id="@+id/buttonUninstall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uninstall App"
        android:layout_marginEnd="17dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/textViewScanTimeResult"
        android:layout_marginTop="109dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewDexSizeResult"
        android:layout_marginBottom="108dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Probability:"
        android:textStyle="bold"
        android:layout_marginStart="41dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textViewDexSize"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textViewProbabilityResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="probability"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textViewDexSizeResult"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewDexSizeResult" />

    <TextView
        android:id="@+id/textViewDexSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Dex size:"
        android:layout_marginEnd="2dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textViewScanTime"
        app:layout_constraintRight_toRightOf="@+id/textViewScanTime"
        android:layout_marginBottom="29dp" />

    <TextView
        android:id="@+id/textViewDexSizeResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dex_size"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textViewScanTimeResult"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="29dp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewScanTimeResult" />

    <ImageView
        android:id="@+id/imgDroidResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@mipmap/baddroids"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toLeftOf="@+id/textViewDetected"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textViewPackName"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
